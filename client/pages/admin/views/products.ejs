<main>
    <div class="head-title">
        <div class="left">
            <h1>Panel</h1>
            <ul class="breadcrumb">
                <li>
                    <a href="/admin">Panel</a>
                </li>
                <li><i class='bx bx-chevron-right' ></i></li>
                <li>
                    <a class="active" href="#">Productos</a>
                </li>
            </ul>
        </div>
    </div>
    <form method="post" action="/admin/products/update" class="register" id="form">
        <div class="inputs">
            <% for (let x of products) { %>
                <div class="input">
                    <img src="<%= x.img %>" alt="">
                    <h3><%= x.name %></h3>
                    <small><%= x.quantity %></small>
                    <br>
                    <% if (x.quantity <= x.min) { %>
                        <span>BAJO STOCK</span>
                    <% } %>
                    <div class="buttons">
                        <button class="decrease">-</button>
                        <span class="quantity"><%= x.quantity %></span>
                        <input type="number" class="id-input" style="display: none;" name="id[]" value="<%= x.id %>" disabled>
                        <input type="number" class="quantity-input" style="display: none;" name="quantity[]" value="<%= x.quantity %>" disabled>
                        <input type="number" class="quantity-max" style="display: none;" value="<%= x.max %>" disabled>
                        <button class="increase">+</button>
                    </div>
                    <a href="/admin/products/delete/<%- x.id  %>"><i class='bx bx-trash' ></i></a>
                </div>
            <% } %>
